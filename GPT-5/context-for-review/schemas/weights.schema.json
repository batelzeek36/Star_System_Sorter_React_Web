{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gate Line Star System Weight File",
  "description": "Schema for gate.line star system weight assignments with metadata (v4.2 - role+polarity separation)",
  "type": "object",
  "required": ["_meta"],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["version", "baseline_beacon", "gate", "generated_at", "generator", "sum_unorm"],
      "properties": {
        "version": {
          "type": "string",
          "const": "4.2",
          "description": "Baseline version (must be '4.2')"
        },
        "baseline_beacon": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}$",
          "description": "First 8 characters of SHA256 hash of baseline file"
        },
        "gate": {
          "type": "string",
          "pattern": "^[0-9]{2}$",
          "description": "Zero-padded gate number (01-64)"
        },
        "generated_at": {
          "type": "string",
          "description": "ISO8601 timestamp of generation"
        },
        "generator": {
          "type": "string",
          "enum": ["GPT-5", "Claude", "Manual"],
          "description": "System that generated the weights"
        },
        "sum_unorm": {
          "type": "number",
          "minimum": 0,
          "description": "Sum of all non-zero weights across all 6 lines"
        }
      }
    }
  },
  "patternProperties": {
    "^\\d{2}\\.\\d$": {
      "type": "array",
      "minItems": 0,
      "maxItems": 2,
      "description": "Array of star system weights for this line (max 2 systems per top-2 constraint)",
      "items": {
        "type": "object",
        "required": ["star_system", "weight", "role", "polarity", "confidence", "behavioral_match", "keywords", "why"],
        "properties": {
          "star_system": {
            "type": "string",
            "enum": ["Pleiades", "Sirius", "Lyra", "Andromeda", "Orion Light", "Orion Dark", "Arcturus", "Draco"],
            "description": "Canonical star system name (exact case and spacing)"
          },
          "weight": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 0.95,
            "description": "Weight value (0.0-0.95, multiples of 0.01)"
          },
          "role": {
            "type": "string",
            "enum": ["primary", "secondary"],
            "description": "Priority/strength: 'primary' = highest weight on line, 'secondary' = second system"
          },
          "polarity": {
            "type": "string",
            "enum": ["core", "shadow"],
            "description": "Expression/valence: 'core' = healthy signature, 'shadow' = growth-edge/under stress"
          },
          "confidence": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Confidence level (1-5)"
          },
          "behavioral_match": {
            "type": "string",
            "minLength": 1,
            "description": "Brief description of behavioral match"
          },
          "keywords": {
            "type": "array",
            "minItems": 2,
            "maxItems": 6,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "2-6 keywords from source texts"
          },
          "why": {
            "type": "string",
            "minLength": 1,
            "description": "Justification citing baseline themes or quick_rules"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
