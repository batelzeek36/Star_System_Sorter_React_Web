{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gate Line Evidence File",
  "description": "Schema for gate.line evidence with verbatim quotes and citations (v4.2 - role+polarity separation)",
  "type": "object",
  "required": ["_meta"],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["version", "baseline_beacon", "gate", "generated_at", "generator"],
      "properties": {
        "version": {
          "type": "string",
          "const": "4.2",
          "description": "Baseline version (must be '4.2')"
        },
        "baseline_beacon": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}$",
          "description": "First 8 characters of SHA256 hash of baseline file"
        },
        "gate": {
          "type": "string",
          "pattern": "^[0-9]{2}$",
          "description": "Zero-padded gate number (01-64)"
        },
        "generated_at": {
          "type": "string",
          "description": "ISO8601 timestamp of generation"
        },
        "generator": {
          "type": "string",
          "enum": ["GPT-5", "Claude", "Manual"],
          "description": "System that generated the evidence"
        }
      }
    }
  },
  "patternProperties": {
    "^\\d{2}\\.\\d$": {
      "type": "array",
      "minItems": 0,
      "description": "Array of evidence entries for systems with non-zero weights",
      "items": {
        "type": "object",
        "required": ["star_system", "polarity", "sources", "atoms", "why_cited", "confidence"],
        "properties": {
          "star_system": {
            "type": "string",
            "enum": ["Pleiades", "Sirius", "Lyra", "Andromeda", "Orion Light", "Orion Dark", "Arcturus", "Draco"],
            "description": "Canonical star system name (exact case and spacing)"
          },
          "polarity": {
            "type": "string",
            "enum": ["core", "shadow"],
            "description": "Expression/valence: 'core' = healthy signature, 'shadow' = growth-edge/under stress"
          },
          "sources": {
            "type": "object",
            "required": ["legge1899", "line_companion"],
            "properties": {
              "legge1899": {
                "type": "object",
                "required": ["quote", "locator", "attribution"],
                "properties": {
                  "quote": {
                    "type": "string",
                    "maxLength": 250,
                    "description": "Verbatim quote (≤25 words, MUST be from same line number if weight >0.50)"
                  },
                  "locator": {
                    "type": "string",
                    "description": "Citation locator"
                  },
                  "attribution": {
                    "type": "string",
                    "description": "Source attribution"
                  }
                }
              },
              "line_companion": {
                "type": "object",
                "required": ["quote", "locator", "attribution"],
                "properties": {
                  "quote": {
                    "type": "string",
                    "maxLength": 250,
                    "description": "Verbatim quote (≤25 words, may be from any line in gate)"
                  },
                  "locator": {
                    "type": "string",
                    "description": "Citation locator"
                  },
                  "attribution": {
                    "type": "string",
                    "description": "Source attribution"
                  }
                }
              }
            },
            "additionalProperties": false
          },
          "atoms": {
            "type": "object",
            "required": ["hd_keywords", "ic_atoms"],
            "properties": {
              "hd_keywords": {
                "type": "array",
                "minItems": 2,
                "maxItems": 6,
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "description": "2-6 keywords from Human Design text"
              },
              "ic_atoms": {
                "type": "array",
                "minItems": 2,
                "maxItems": 6,
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "description": "2-6 keywords from I Ching text"
              }
            }
          },
          "why_cited": {
            "type": "string",
            "minLength": 1,
            "description": "Explanation of why this evidence supports the weight"
          },
          "confidence": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Confidence level (1-5)"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
