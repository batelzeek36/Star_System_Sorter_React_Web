{
  "name": "star-system-sorter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "compile:lore": "tsx scripts/compile-lore.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "predev": "npm run compile:lore",
    "dev": "vite",
    "prebuild": "npm run compile:lore",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "analyze:bundle": "tsx scripts/analyze-bundle-size.ts",
    "test:perf": "vitest run --reporter=verbose src/screens/WhyScreen.perf.test.tsx src/screens/DossierScreen.perf.test.tsx",
    "classify": "tsx scripts/classify.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-oauth/google": "^0.12.2",
    "@tanstack/react-virtual": "^3.13.12",
    "@vercel/node": "^5.4.0",
    "clsx": "^2.1.1",
    "html-to-image": "^1.11.13",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.546.0",
    "node-cache": "^5.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.65.0",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^3.3.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-yaml": "^4.1.2",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
